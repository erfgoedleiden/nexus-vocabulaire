recordtypes:Persoonsvermelding
    rdf:type                 memorix:Recordtype , sh:NodeShape ;
    rdfs:comment             "Standaard Recordtype voor Persoonsvermeldingen in Indexen"@nl ;
    rdfs:label               "Persoonsvermelding"@nl, "Person observation"@en ;
    dash:defaultViewForRole  dash:all ;
    dce:identifier            "Persoonsvermelding" ;
    sh:closed                true ;
    sh:ignoredProperties     ( rdf:type ) ;
    sh:property              [
        rdfs:label   "Rol"@nl, "Role"@en ;
        rdfs:comment "De rol of functie van de persoon in de akte of inschrijving. Voorbeeld: vader, belender"@nl ;
        sh:group     persoonsvermelding:personListingGroup ;
        sh:order     0.2 ;
        sh:maxCount 10 ;
        memorix:inTitleAt  0.5 ;
        sh:path      schema:roleName ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/7b9df6df-1c81-463f-85e1-d8ce7d002ab7> ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property              [
        rdfs:label         "Voornaam"@nl,"First name"@en ;
        memorix:inTitleAt  1.0 ;
        sh:maxCount  1 ;
        sh:datatype        xsd:string ;
        sh:group           persoonsvermelding:personListingGroup ;
        sh:order           1.0 ;
        sh:path            schema:givenName
    ] ;
    sh:property              [
        rdfs:label         "Achternaam"@nl, "Surname"@en ;
        rdfs:comment       "Voor een getrouwde vrouw: neem de meisjesnaam. De getrouwde naam noteer je in Opmerkingen openbaar."@nl ;
        memorix:inTitleAt  3.0 ;
        sh:maxCount  1 ;
        sh:datatype        xsd:string ;
        sh:group           persoonsvermelding:personListingGroup ;
        sh:order           3.0 ;
        sh:path            schema:familyName
    ] ;
    sh:property              [
        rdfs:label   "Opmerkingen openbaar"@nl, "Remarks"@en ;
        dash:editor  dash:TextAreaEditor ;
        sh:datatype  xsd:string ;
        sh:group     persoonsvermelding:remarksGroup ;
        sh:maxCount  1 ;
        sh:order     1.0 ;
        sh:path      rico:descriptiveNote
    ] ;
    sh:property              [
        rdfs:comment  "Bijzonderheid bij deze akte"@nl ;
        rdfs:label    "Bijzonderheid"@nl, "Details"@en ;
        dash:viewer   dash:DetailsEditor ;
        sh:class      persoonsvermelding:Details ;
        sh:group      persoonsvermelding:detailsGroup ;
        sh:maxCount   10 ;
        sh:nodeKind   sh:BlankNode ;
        sh:order      1.0 ;
        sh:path       dc:description ;
    ] ;
    sh:property              [
        rdfs:label         "Achtervoegsel"@nl, "Suffix"@en ;
        rdfs:comment       "Voorbeeld: de oude, de jonge, sr, jr. Let op: een achtervoegsel kan ook voor de naam staan: jonge Pieter Vranckensz / Pieter Vranckensz de jonge"@nl ;
        rdfs:comment       ""@nl ;
        sh:datatype        xsd:string ;
        sh:maxCount  1 ;
        sh:group           persoonsvermelding:personListingGroup ;
        sh:order           3.3 ;
        sh:path            schema:honorificSuffix
    ] ;
    sh:property              [
        rdfs:label   "Leeftijd (jaar)"@nl, "Age (year)"@en ;
        rdfs:comment "Leeftijd in jaren, afgerond naar beneden. Voorbeeld: 6 maanden wordt hier geregistreerd als 0"@nl ;
        sh:datatype  xsd:integer ;
        sh:maxCount  1 ;
        sh:group     persoonsvermelding:personListingGroup ;
        sh:order     8.5 ;
        sh:path      dbpo:age
    ] ;
    sh:property              [
        rdfs:label   "Religie"@nl, "Religion"@en ;
        sh:maxCount  1 ;
        sh:datatype  xsd:string ;
        sh:group     persoonsvermelding:personListingGroup ;
        sh:order     9.0 ;
        sh:path      dbpo:religion
    ] ;
    sh:property              [
        rdfs:label   "Titel"@nl, "Title"@en ;
        rdfs:comment "Academische titels (bv. prof., mr., dr.), adellijke titels (bv. keizer, koning, prinses) en kerkelijke titels (bv. ds., mgr.)"@nl ;
        sh:datatype  xsd:string ;
        sh:group     persoonsvermelding:personListingGroup ;
        sh:maxCount  20 ;
        sh:order     3.7 ;
        sh:path      foaf:title
    ] ;

    sh:property              [
        rdfs:label   "Gebeurtenis"@nl, "Event"@en ;
        dash:viewer  dash:DetailsEditor ;
        sh:class     persoonsvermelding:Event ;
        sh:group     persoonsvermelding:personListingGroup ;
        sh:maxCount  10 ;
        sh:nodeKind  sh:BlankNode ;
        sh:order     4.0 ;
        sh:path      rico:isAssociatedWithEvent
    ] ;
    sh:property              [
        rdfs:label   "Opmerkingen intern"@nl, "Internal remarks"@en ;
        dash:editor  dash:TextAreaEditor ;
        sh:datatype  xsd:string ;
        sh:group     persoonsvermelding:remarksGroup ;
        sh:maxCount  1 ;
        sh:order     2.0 ;
        sh:path      elo:opmerkingIntern
    ] ;
    sh:property              [
        rdfs:label         "Tussenvoegsel"@nl, "Surname prefix"@en ;
        rdfs:comment       "Alle tussenvoegsels tussen voor- en achternaam. Een tussenvoegsel tussen onderdelen van de achternaam wordt opgenomen in 'Achternaam'."@nl ;  
        memorix:inTitleAt  2.5 ;
        sh:maxCount  1 ;
        sh:datatype        xsd:string ;
        sh:group           persoonsvermelding:personListingGroup ;
        sh:order           2.6 ;
        sh:path            elo:tussenvoegsel ;
    ] ;
    sh:property              [
        rdfs:label   "Leeftijd"@nl, "Age"@en ;
        rdfs:comment "Leeftijd noteren zoals deze in de bron staat. Voorbeeld: 6 maanden"@nl ;
        sh:datatype  xsd:string ;
        sh:maxCount  1 ;
        sh:group     persoonsvermelding:personListingGroup ;
        sh:order     8.0 ;
        sh:path      elo:leeftijd ;
    ] ;
    sh:property              [
        rdfs:label          "Geslacht"@nl, "Gender"@en ;
        rdfs:comment        "Keuze uit 'man', 'vrouw' en 'onbekend'. Dit veld alleen invullen als er een geslachtsaanduiding in de bron staat. Dus niet afleiden van bijvoorbeeld de voornaam of het beroep"@nl ;   
        sh:maxCount         1 ;
        sh:group            persoonsvermelding:personListingGroup ;
        sh:order            3.6 ;
        sh:path             schema:gender ;
        dash:editor         memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/bf92f5f7-d8be-45b8-be59-c79af171ce11> ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property              [
        rdfs:label         "Voorvoegsel"@nl, "Prefix"@en ;
        rdfs:comment "Aanduiding van een niet bij name genoemd persoon ten opzichte van iemand, die wel is genoemd. Voorbeeld : de weduwe van, de erven van, kind van"@nl ;
        sh:maxCount  1 ;
        sh:datatype        xsd:string ;
        sh:group           persoonsvermelding:personListingGroup ;
        sh:order           0.5 ;
        sh:path            elo:voorvoegsel ;
    ] ;
    sh:property              [
        rdfs:comment  "Locaties die voorkomen op de akte"@nl ;
        rdfs:label    "Locatie"@nl, "Place"@en ;
        dash:viewer   dash:DetailsEditor ;
        sh:class      persoonsvermelding:Location ;
        sh:group      persoonsvermelding:locationsGroup ;
        sh:maxCount   999 ;
        sh:nodeKind   sh:BlankNode ;
        sh:order      1.0 ;
        sh:path       schema:contentLocation
    ] ;
    sh:property              [
        rdfs:comment  "Beroep overnemen zoals deze in de bron staat."@nl ;
        rdfs:label    "Beroep"@nl, "Profession"@en ;
        dash:viewer   dash:DetailsEditor ;
        sh:class      persoonsvermelding:Profession ;
        sh:group      persoonsvermelding:personListingGroup ;
        sh:maxCount   999 ;
        sh:nodeKind   sh:BlankNode ;
        sh:order      10.0 ;
        sh:path       rico:hasOrHadOccupationOfType
    ] ;
    sh:property              [
        rdfs:label         "Patroniem"@nl, "Patronymic"@en ;
        rdfs:comment       "Een patroniem kan in de tekst ook achter de achternaam staan."@nl ;            
        memorix:inTitleAt  2.0 ;
        sh:maxCount  1 ;
        sh:datatype        xsd:string ;
        sh:group           persoonsvermelding:personListingGroup ;
        sh:order           2.5 ;
        sh:path            person:patronymicName
    ] ;
    sh:targetClass           recordtypes:Persoonsvermelding .

persoonsvermelding:locationsGroup
    rdf:type    sh:PropertyGroup ;
