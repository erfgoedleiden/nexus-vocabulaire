@prefix bag:            <http://bag.basisregistraties.overheid.nl/def/bag#> .
@prefix dash:           <http://datashapes.org/dash#> .
@prefix dbpo:           <http://dbpedia.org/ontology/> .
@prefix dc:             <http://purl.org/dc/terms/> .
@prefix dce:            <http://purl.org/dc/elements/1.1/> .
@prefix elo:            <http://erfgoedleiden.github.io/nexus-vocabulaire/def/vocab#> .
@prefix foaf:           <http://xmlns.com/foaf/0.1/> .
@prefix gn:             <http://www.geonames.org/ontology#> .
@prefix html:           <http://www.w3.org/1999/xhtml/> .
@prefix memorix:        <http://memorix.io/ontology#> .
@prefix persoon:        </resources/recordtypes/Persoon#> .
@prefix rdf:            <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:           <http://www.w3.org/2000/01/rdf-schema#> .
@prefix recordtypes:    </resources/recordtypes/> .
@prefix rico:           <https://www.ica.org/standards/RiC/ontology#> .
@prefix sh:             <http://www.w3.org/ns/shacl#> .
@prefix schema:         <http://schema.org/> .
@prefix vocabularies:   </resources/vocabularies/> .
@prefix xsd:            <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:           <http://www.w3.org/2004/02/skos/core#> .

recordtypes:Persoon
  a memorix:Recordtype, sh:NodeShape ;
  rdfs:label "Persoon"@nl, "Person"@en ;
  rdfs:comment "Standaard Recordtype voor Personen met uitbreidingen speciefiek voor Erfgoed Leiden"@nl, "Record type for Person - Erfgoed Leiden"@en ;
  dce:identifier "Persoon" ;
  memorix:copyrightHolderSource  true ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass recordtypes:Persoon ;
  dash:defaultViewForRole dash:all ;
  sh:property [
    rdfs:label "Voornaam"@nl,"First name"@en ;
    sh:path schema:givenName ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    sh:group persoon:identityGroup ;
    memorix:inTitleAt 2.0 ;
    memorix:searchWeight 3.0 ;
    sh:datatype xsd:string ;
    dash:singleLine true ;
  ] ;
  sh:property [
    rdfs:label "Tussenvoegsel"@nl, "Surname prefix"@en ;
    sh:path dbpo:prefix ;
    sh:maxCount 1 ;
    sh:order 2.0 ;
    sh:group persoon:identityGroup ;
    memorix:inTitleAt 3.0 ;
    memorix:searchWeight 3.0 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    rdfs:label "Achternaam"@nl, "Surname"@en ;
    sh:path schema:familyName ;
    sh:maxCount 1 ;
    sh:order 3.0 ;
    sh:group persoon:identityGroup ;
    memorix:inTitleAt 1.0 ;
    memorix:searchWeight 3.0 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    rdfs:label "Alternatieve namen"@nl, "Alternate names"@en ;
    sh:path schema:additionalName ;
    sh:maxCount 100 ;
    sh:order 4.0 ;
    sh:group persoon:identityGroup ;
    memorix:searchWeight 1.0 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    rdfs:label "Identificatiekenmerk"@nl, "Identification"@en ;
    sh:path rico:identifier ;
    sh:maxCount 1 ;
    sh:order 5.0 ;
    sh:group persoon:identityGroup ;
    memorix:searchWeight 1.0 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    rdfs:label "Identiek aan"@nl, "Is same as (external)"@en ;
    rdfs:comment "Is identiek aan persoon in andere terminologiebron"@nl, "Is same as person in external vocabulary"@en ;
    sh:path rico:isRelatedTo ;
    sh:maxCount 1 ;
    sh:order 6.0 ;
    sh:group persoon:identityGroup ;
    memorix:searchWeight 1.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( <https://data.rkd.nl/rkdartists> <http://data.bibliotheken.nl/id/dataset/persons> <https://www.wikidata.org#entities-persons> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
    sh:property [
    rdfs:label "Nationaliteit"@nl, "Nationality"@en ;
    sh:path schema:nationality ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    sh:group persoon:descriptiveInformationGroup ;
    memorix:searchWeight 1.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/f0ed2f2e-e99b-4153-b685-08649d96ea59> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Geslacht"@nl, "Gender"@en ;
    sh:path schema:gender ;
    sh:maxCount 1 ;
    sh:order 2.0 ;
    sh:group persoon:descriptiveInformationGroup ;
    memorix:searchWeight 1.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/bf92f5f7-d8be-45b8-be59-c79af171ce11> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Biografie"@nl, "Biography"@en ;
    sh:path rico:history ;
    sh:maxCount 1 ;
    sh:order 3.0 ;
    memorix:searchWeight 1.0 ;
    memorix:inSummaryAt 5.0;
    sh:group persoon:descriptiveInformationGroup ;
    sh:datatype xsd:string ;
    dash:editor dash:TextAreaEditor ;
  ] ;
  sh:property [
    rdfs:label "Bibliografie"@nl, "Bibliography"@en ;
    sh:path schema:citation ;
    sh:datatype xsd:string ;
    dash:editor dash:TextAreaEditor ;
    sh:maxCount 1 ;
    sh:order 4.0 ;
    sh:group persoon:descriptiveInformationGroup ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Opmerkingen beschrijving"@nl, "Remarks description"@en ;
    sh:path rico:descriptiveNote ;
    sh:datatype xsd:string ;
    dash:editor dash:TextAreaEditor ;
    sh:maxCount 1 ;
    sh:order 5.0 ;
    sh:group persoon:descriptiveInformationGroup ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Geboorte"@nl, "Birth"@en ;
    rdfs:comment "Geboorte Event"@nl ;
    sh:maxCount 1 ;
    sh:path rico:hasBirthDate ;
    sh:order 1.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class persoon:BirthEvent ;
    sh:group persoon:lifeEventsGroup ;
  ] ;
  sh:property [
    rdfs:label "Overlijden"@nl, "Decease"@en ;
    rdfs:comment "Overlijden Event"@nl ;
    sh:maxCount 1 ;
    sh:path rico:hasDeathDate ;
    sh:order 2.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class persoon:DeathEvent ;
    sh:group persoon:lifeEventsGroup ;
  ] ;
  sh:property [
    rdfs:label "Werkzame periode start"@nl, "Active period starts"@en ;
    sh:path rico:hasBeginningDate ;
    dash:editor  memorix:DateEditor ;
    sh:datatype  xsd:integer ;
    sh:maxCount 1 ;
    sh:order 3.0 ;
    sh:group persoon:lifeEventsGroup ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Werkzame periode einde"@nl, "Active period ends"@en ;
    sh:path rico:hasEndDate ;
    dash:editor  memorix:DateEditor ;
    sh:datatype  xsd:integer ;
    sh:maxCount 1 ;
    sh:order 3.0 ;
    sh:group persoon:lifeEventsGroup ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Plaats van werkzaamheid"@nl, "Place of activity"@en ;
    rdfs:comment "Plaatsen van werkzaamheid"@nl ;
    sh:maxCount 10 ;
    sh:path schema:workLocation ;
    sh:order 4.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class persoon:PlaceOfActivity ;
    sh:group persoon:lifeEventsGroup ;
  ] ;
  sh:property [
    rdfs:label "Relatie"@nl, "Relation"@en ;
    rdfs:comment "Relatie tussen personen"@nl ;
    sh:maxCount 10 ;
    sh:path rico:isAgentAssociatedWithAgent ;
    sh:order 1.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class persoon:Relation ;
    sh:group persoon:relationsGroup;
  ] ;
  sh:property [
    rdfs:label "Contactpersoon"@nl, "Contact"@en ;
    sh:path schema:contactPoint ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 0.5 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Adres"@nl, "Address"@en ;
    sh:path schema:streetAddress ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 1.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Postcode"@nl, "Zip code"@en ;
    sh:path schema:postalCode ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 2.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Plaats"@nl, "City"@en ;
    sh:path schema:addressLocality ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 2.5 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Land"@nl, "Country"@en ;
    sh:path schema:addressCountry ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 3.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "E-mail"@nl, "E-mail"@en ;
    sh:path schema:email ;
    sh:datatype xsd:string;
    sh:maxCount 5 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 4.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Website"@nl, "Website"@en ;
    sh:path foaf:homepage ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 5.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Telefoonnummer"@nl, "Phone number"@en ;
    sh:path schema:telephone ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 6.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Contactnummer"@nl, "Contact number"@en ;
    sh:path elo:contactnummer ;
    sh:datatype xsd:string;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 7.0 ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Opmerkingen bij contactinformatie"@nl, "Remarks on Contact"@en ;
    sh:path elo:opmerkingContact ;
    sh:maxCount 1 ;
    sh:group persoon:contactInformationGroup ;
    sh:order 8.0 ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;

  sh:property [
    rdfs:label "Rechten-afspraken"@nl, "Copyright Agreements"@en ;
    sh:maxCount 100 ;
    sh:path rico:isAssociatedWithRule ;
    sh:order 1.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class persoon:RightsAgreement ;
    sh:group persoon:managementGroup ;
  ] ;
  sh:property [
    rdfs:label "Opmerkingen beheer"@nl, "Remarks Management"@en ;
    sh:path elo:opmerkingBeheerder ;
    sh:maxCount 1 ;
    sh:group persoon:managementGroup ;
    sh:order 9.0 ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;
.
persoon:BirthEvent
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass persoon:BirthEvent ;
  sh:property [
    rdfs:label "Geboortedatum"@nl, "Date of birth"@en ;
    sh:path rico:birthDate ;
    sh:order 1.0 ;
    memorix:inSummaryAt 1.0;
    dash:editor  memorix:DateEditor ;
    sh:datatype  xsd:integer ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Geboorteplaats"@nl, "Place of birth"@en ;
    sh:path schema:addressLocality ;
    sh:order 2.0 ;
    memorix:inSummaryAt 2.0;
    sh:datatype xsd:string ;
    dash:editor dash:TextFieldEditor ;
    memorix:searchWeight 1.0 ;
    # TODO dit moet een link naar Geonames worden
  ]
.
persoon:DeathEvent
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass persoon:DeathEvent ;
  sh:property [
    rdfs:label "Overlijdensdatum"@nl, "Date of death"@en ;
    sh:path rico:deathDate ;
    sh:order 1.0 ;
    memorix:inSummaryAt 3.0;
    dash:editor  memorix:DateEditor ;
    sh:datatype  xsd:integer ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Overlijdensplaats"@nl, "Place of death"@en ;
    sh:path schema:addressLocality ;
    sh:order 2.0 ;
    memorix:inSummaryAt 4.0;
    sh:datatype xsd:string ;
    dash:editor dash:TextFieldEditor ;
    memorix:searchWeight 1.0 ;
    # TODO dit moet een link naar Geonames worden
  ]
.
persoon:PlaceOfActivity
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass persoon:PlaceOfActivity ;
  sh:property [
      rdfs:label "Locatie coördinaten"@nl, "Location coordinates"@en ;
      sh:path schema:geo ;
      sh:order 0.9 ;
      sh:datatype xsd:string ;
      memorix:searchWeight 1.0 ;
    # TODO dit moet een link naar coordinates
  ] ;
  sh:property [
    rdfs:label "Locatie geoNames"@nl, "Location geoNames"@en ;
    sh:path gn:Code ;
    sh:order 1.0 ;
    sh:datatype xsd:string ;
    memorix:searchWeight 1.0 ;
  # TODO dit moet een link naar Geonames worden
  ] ;
  sh:property [
    rdfs:label "Locatie address (BAG)"@nl, "Location address (BAG)"@en ;
    sh:path bag:identificatie ;
    sh:order 1.1 ;
    sh:datatype xsd:string ;
    memorix:searchWeight 1.0 ;
  # TODO dit moet een link naar BAG IDS worden
  ] ;
  sh:property [
    rdfs:label "Begindatum"@nl, "Starting date"@en ;
    sh:path rico:hasBeginningDate ;
    sh:order 2.0 ;
    dash:editor  memorix:DateEditor ;
    sh:datatype  xsd:integer ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Einddatum"@nl, "End date"@en  ;
    sh:path rico:hasEndDate ;
    sh:order 3.0 ;
    dash:editor  memorix:DateEditor ;
    sh:datatype  xsd:integer ;
    memorix:searchWeight 1.0 ;
  ] ;
  sh:property [
    rdfs:label "Opmerking bij plaats werkzaamheid"@nl, "Remarks on place of activity"@en ;
    sh:path rico:descriptiveNote ;
    sh:order 4.0 ;
    sh:datatype xsd:string ;
    dash:editor dash:TextAreaEditor ;
    memorix:searchWeight 1.0 ;
  ]
.

persoon:Relation
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass persoon:Relation ;
  sh:property [
    rdfs:label "Soort relatie"@nl, "Type of relationship"@en ;
    sh:path rico:hasContentOfType ;
    sh:order 1.0 ;
    memorix:searchWeight 1.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/0f3d31f2-066b-49e8-8992-91c1e493a364> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Gerelateerd Persoon/Organisatie"@nl, "Related Person/Organization"@en ;
    sh:path rico:isRelatedTo ;
    sh:order 2.0 ;
    sh:nodeKind sh:IRI ;
    sh:or (
            [ sh:class recordtypes:Persoon ]
            [ sh:class recordtypes:Organisatie ]
    ) ;
    dash:editor memorix:LinkedRecordEditor ;
    memorix:searchWeight 1.0 ;
  ]
.

persoon:RightsAgreement
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass persoon:RightsAgreement ;
  sh:property [
    rdfs:label "Auteursrechtverklaring"@nl, "Copyright statement"@en ;
    sh:path rico:conditionsOfUse ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/affe15be-8c77-40e5-87af-6e86137799e6> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Opmerking"@nl, "Remarks"@en ;
    sh:path rico:descriptiveNote ;
    sh:order 2.0 ;
    sh:datatype xsd:string ;
    dash:editor dash:TextAreaEditor ;
    memorix:searchWeight 1.0 ;
  ]
.

persoon:identityGroup a sh:PropertyGroup ;
  rdfs:label "Identiteit"@nl, "Identity"@en ;
  sh:order 1.0
.
persoon:descriptiveInformationGroup a sh:PropertyGroup ;
  rdfs:label "Beschrijving"@nl, "Description"@en ;
  sh:order 2.0
.
persoon:lifeEventsGroup a sh:PropertyGroup ;
  rdfs:label "Levensloop"@nl, "Lifecycle"@en ;
  sh:order 3.0
.
persoon:relationsGroup a sh:PropertyGroup ;
  rdfs:label "Relaties"@nl, "Relations"@en ;
  sh:order 4.0
.
persoon:contactInformationGroup a sh:PropertyGroup ;
  rdfs:label "Contactinformatie"@nl, "Contact"@en ;
  sh:order 5.0
.
persoon:managementGroup a sh:PropertyGroup ;
  rdfs:label "Beheer"@nl, "Management"@en ;
  sh:order 6.0
.
