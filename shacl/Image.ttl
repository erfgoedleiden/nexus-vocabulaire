    sh:path rico:height ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    rdfs:label "Hoogte eenheid"@nl, "Height unit"@en ;
    sh:path elo:hoogteWaarde ;
    sh:maxCount 1 ;
    sh:order 2.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/5fbfb737-54a9-4e55-a9fd-156ccf4d0f5f> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Breedte"@nl, "Width"@en ;
    rdfs:comment "Breedte van het object, zonder passe-partout en opzetvel"@nl ;
    sh:path rico:width ;
    sh:maxCount 1 ;
    sh:order 3.0 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    rdfs:label "Breedte eenheid"@nl, "Width unit"@en ;
    sh:path elo:breedteWaarde ;
    sh:maxCount 1 ;
    sh:order 4.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/5fbfb737-54a9-4e55-a9fd-156ccf4d0f5f> ) ;
