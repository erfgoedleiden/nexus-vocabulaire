@prefix bag:          <http://bag.basisregistraties.overheid.nl/def/bag#> .
@prefix dash:         <http://datashapes.org/dash#> .
@prefix dbpo:         <http://dbpedia.org/ontology/> .
@prefix dc:           <http://purl.org/dc/terms/> .
@prefix dce:          <http://purl.org/dc/elements/1.1/> .
@prefix elo:          <http://erfgoedleiden.github.io/nexus-vocabulaire/def/vocab#> .
@prefix foaf:         <http://xmlns.com/foaf/0.1/> .
@prefix html:         <http://www.w3.org/1999/xhtml/> .
@prefix image:        </resources/recordtypes/Image#> .
@prefix memorix:      <http://memorix.io/ontology#> .
@prefix rdf:          <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:         <http://www.w3.org/2000/01/rdf-schema#> .
@prefix recordtypes:  </resources/recordtypes/> .
@prefix rico:         <https://www.ica.org/standards/RiC/ontology#> .
@prefix schema:       <http://schema.org/> .
@prefix sh:           <http://www.w3.org/ns/shacl#> .
@prefix skos:         <http://www.w3.org/2004/02/skos/core#> .
@prefix vocabularies: </resources/vocabularies/> .
@prefix xsd:          <http://www.w3.org/2001/XMLSchema#> .

recordtypes:Image
  a memorix:Recordtype, sh:NodeShape ;
  rdfs:label "Afbeelding"@nl, "Image"@en  ;
  rdfs:comment "Afbeeldingen - Erfgoed Leiden"@nl, "Image - Erfgoed Leiden"@en  ;
  dce:identifier "Image" ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass recordtypes:Image ;
  dash:defaultViewForRole dash:all ;
  memorix:hasInformationComponent
          [ rdf:type  memorix:DigitalAssetComponent ] ;
  sh:property [
    rdfs:label "Collectie"@nl, "Collection"@en ;
    rdfs:comment         "Organisatie waar het beeldmateriaal van afkomstig is"@nl ;
    sh:path rico:isOrWasPartOf ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    sh:group image:identificationGroup ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/8490ee59-818e-41a8-b37f-7b5040f3c4a4> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Bestandsnaam"@nl, "File name"@en ;
    rdfs:comment "Naam van het digitale bestand."@nl ;
    sh:path dbpo:filename ;
    memorix:inSummaryAt 1.0 ;
    sh:maxCount 200 ;
    sh:order 2.0 ;
    sh:group image:identificationGroup ;
    sh:datatype xsd:string ;
    dash:singleLine true ;
  ] ;
  sh:property [
    rdfs:label "Objectnummer"@nl, "Identifier"@en ;
    rdfs:comment "Identificatienummer van het object"@nl ;
    sh:path rico:identifier ;
    memorix:inTitleAt 1.0 ;
    sh:maxCount 100 ;
    sh:order 3.0 ;
    sh:group image:identificationGroup ;
    sh:datatype xsd:string ;
    dash:singleLine true ;
  ] ;
  sh:property [
    rdfs:label "Documenttype"@nl, "Document type"@en ;
    sh:path rico:hasContentOfType ;
    sh:maxCount 10 ;
    sh:order 4.0 ;
    sh:group image:identificationGroup ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/5f449ae6-01a2-44a3-a5a6-f74dfa587a87> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Titel"@nl, "Title"@en ;
    rdfs:comment "Een korte omschrijving van het onderwerp (wie, wat, waar). Achter de zin wordt geen punt gezet. Als er een titel op de prent staat, dan citeer je de tekst en zet je deze tussen aanhalingstekens."@nl ;
    sh:maxCount 1 ;
    sh:path rico:title ;
    memorix:inTitleAt 2.0 ;
    sh:order 10.0 ;
    sh:group image:contentDescriptionGroup ;
    sh:datatype xsd:string ;
    dash:singleLine true ;
  ] ;
  sh:property [
    rdfs:label "Beschrijving"@nl, "Description"@en ;
    rdfs:comment "Uitgebreide beschrijving van wat er op de afbeelding te zien is. Noteer hier wie, wat en waar."@nl ;
    sh:maxCount 1 ;
    sh:path dc:description ;
    sh:order 11.0 ;
    sh:group image:contentDescriptionGroup ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;
  sh:property [
    rdfs:label "Extra informatie"@nl, "Extra information"@en ;
    rdfs:comment "Hier kun je alles in kwijt wat niet in Beschrijving thuis hoort. Voorbeeld: Leidsch Dagblad, 1-04-1990; Zie ook PV34997"@nl ;
    sh:maxCount 1 ;
    sh:path elo:extraInformatie ;
    sh:order 12.0 ;
    sh:group image:contentDescriptionGroup ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;
  sh:property [
    rdfs:label "Afgebeelde personen"@nl, "Depicted persons"@en ;
    sh:path foaf:depicts ;
    sh:maxCount 100 ;
    sh:order 13.0 ;
    sh:nodeKind sh:IRI ;
    sh:group image:contentDescriptionGroup ;
    sh:or (
      [ sh:class recordtypes:Persoon ]
      [ sh:class recordtypes:Organisatie ]
    ) ;
    dash:editor memorix:LinkedRecordEditor ;
  ] ;

  sh:property [
    rdfs:label "Trefwoorden"@nl, "Subjects"@en ;
    sh:path schema:keywords ;
    sh:maxCount 10 ;
    sh:order 14.0 ;
    sh:group image:contentDescriptionGroup ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/4190de09-7dca-44ce-a9bd-04716cfa70aa> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Datering gebeurtenis"@nl, "Date of the event"@en  ;
    sh:maxCount 1 ;
    sh:path rico:isAssociatedWithEvent ;
    sh:order 15.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class image:EventDate ;
    sh:group image:contentDescriptionGroup ;
  ] ;
  sh:property [
    rdfs:label "Afgebeelde locatie"@nl, "Places"@en ;
    sh:maxCount 10 ;
    # "The location depicted or described in the content. For example, the location in a photograph or painting."
    sh:path schema:contentLocation ;
    sh:order 16.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class image:DepictedLocation ;
    sh:group image:contentDescriptionGroup ;
  ] ;

  sh:property [
    rdfs:label "Techniek"@nl, "Technique"@en ;
    sh:path rico:hasProductionTechniqueType ;
    sh:maxCount 10 ;
    sh:order 17.0 ;
    sh:group image:physicalDescriptionGroup ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/421b42cd-90c2-495d-86bd-8d49ddec08df> ) ;
    sh:nodeKind sh:IRI ;
  ] ;

  sh:property [
    rdfs:label "Vervaardigers"@nl, "Creators"@en ;
    sh:maxCount 10 ;
    sh:path rico:hasCreator ;
    sh:order 18.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class image:Creator ;
    sh:group image:physicalDescriptionGroup ;
  ] ;
  sh:property [
    rdfs:label "Datering vervaardiging"@nl, "Date of creation"@en ;
    sh:path rico:creationDate ;
    sh:maxCount 1 ;
    sh:order 19.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class image:CreationDate ;
    sh:group image:physicalDescriptionGroup ;
  ] ;
  sh:property [
    rdfs:label "Afmetingen"@nl, "Dimensions"@en ;
    sh:path rico:measure ;
    sh:maxCount 1 ;
    sh:order 20.0 ;
    dash:viewer dash:DetailsEditor ;
    sh:nodeKind sh:BlankNode ;
    sh:class image:Dimension ;
    sh:group image:physicalDescriptionGroup ;
  ] ;
  sh:property [
    rdfs:label "Geogerefereerd"@nl, "Geo-referenced"@en ;
    sh:path rico:hasOrHadLocation ;
    sh:maxCount 1 ;
    sh:order 21.0 ;
    sh:group image:physicalDescriptionGroup ;
    sh:datatype xsd:boolean ;
  ] ;
  sh:property [
    rdfs:label "Herkomst"@nl, "Aquisition"@en ;
    rdfs:comment "Verwervingsmethode"@nl ;
    sh:path rico:history ;
    sh:maxCount 10 ;
    sh:order 30.0 ;
    sh:group image:aquisitionGroup ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/cae01719-c37a-4e31-bd5a-9e063db0bab5> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Persoon/Organisatie"@nl, "Person/Organization"@en ;
    sh:path schema:seller ;
    sh:maxCount 10 ;
    sh:order 31.0 ;
    sh:nodeKind sh:IRI ;
    sh:group image:aquisitionGroup ;
    sh:or (
      [ sh:class recordtypes:Persoon ]
      [ sh:class recordtypes:Organisatie ]
    ) ;
    dash:editor memorix:LinkedRecordEditor ;
  ] ;
  sh:property [
    rdfs:label "Datum"@nl, "Date"@en ;
    sh:maxCount 1 ;
    sh:group image:aquisitionGroup ;
    sh:path dc:date ;
    sh:order 32.0 ;
    # Advies: maak hier een gestructureerde datum van
    sh:datatype xsd:integer ;
    dash:editor memorix:DateEditor ;
  ] ;
  sh:property [
    rdfs:label "Opmerking"@nl, "Remarks"@en ;
    sh:maxCount 1 ;
    sh:path rico:descriptiveNote ;
    sh:order 33.0 ;
    sh:group image:aquisitionGroup ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;

  sh:property [
    rdfs:label "Standplaatsnummer"@nl, "Depot location number"@en ;
    sh:path rico:hasOrHadPhysicalLocation ;
    memorix:inSummaryAt 2.0 ;
    sh:maxCount 10 ;
    sh:order 40.0 ;
    sh:group image:managementGroup ;
    sh:datatype xsd:string ;
    dash:singleLine true ;
  ] ;
  sh:property [
    rdfs:label "Digitalisering"@nl, "Digitization"@en  ;
    rdfs:comment "Opmerkingen over digitaliseren"@nl ;
    sh:maxCount 1 ;
    sh:path rico:hasDerivedInstantiation ;
    sh:order 42.0 ;
    sh:group image:managementGroup ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;
  sh:property [
    rdfs:label "Opmerkingen beheer"@nl, "Internal remarks"@en ;
    rdfs:comment "Hier kun je alles kwijt over beheer en behoud. Dit is een intern veld, dat niet op de website getoond wordt."@nl ;
    sh:maxCount 1 ;
    sh:path elo:opmerkingBeheerder ;
    sh:order 43.0 ;
    sh:group image:managementGroup ;
    sh:datatype xsd:string ;
    dash:editor  dash:TextAreaEditor ;
  ] ;
.

image:EventDate
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass image:EventDate ;
  sh:property [
    rdfs:label "Datum gebeurtenis tekstveld"@nl, "Date (text)"@en ;
    rdfs:comment "Het jaar waarop de afbeelding betrekking heeft. Je kan die hier tekstueel weergeven. Voorbeeld: bij een schilderij van het Beleg van Leiden vul je hier 1573-1574 in."@nl ;
    sh:path rico:descriptiveNote ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    sh:datatype xsd:string ;
    dash:singleLine true ;
  ] ;
  sh:property [
    rdfs:label "Datum gebeurtenis van"@nl, "Begin date"@en ;
    rdfs:comment "Vroegst mogelijke gebeurtenisdatum. Deze is nodig voor filteren op datum"@nl ;
    sh:maxCount 1 ;
    sh:path rico:hasBeginningDate ;
    sh:order 2.0 ;
    sh:datatype xsd:integer ;
    dash:editor memorix:DateEditor ;
  ] ;
  sh:property [
    rdfs:label "Datum gebeurtenis tot"@nl, "End date"@en ;
    rdfs:comment "Laatst mogelijke gebeurtenisdatum. Deze is nodig voor filteren op datum"@nl ;
    sh:maxCount 1 ;
    sh:path rico:hasEndDate ;
    sh:order 3.0 ;
    sh:datatype xsd:integer ;
    dash:editor memorix:DateEditor ;
  ] ;
.

image:DepictedLocation
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass image:DepictedLocation ;
  sh:property [
    rdfs:label "Plaats"@nl, "City"@en ;
    sh:path schema:addressLocality ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/026baf4a-c14f-4819-be3e-2301fb6b4a67> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
    rdfs:label "Straat"@nl, "Street"@en ;
    sh:path schema:streetAddress ;
    sh:maxCount 1 ;
    sh:order 2.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/2540c439-bebf-4ce7-bca9-3c3cba71a6c9> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
  sh:property [
      rdfs:label "Huisnummer"@nl, "House number"@en ;
      sh:maxCount 1 ;
      sh:path bag:huisnummer ;
      sh:order 3.0 ;
      sh:datatype xsd:string ;
  ] ;
  sh:property [
      rdfs:label "Coördinaten"@nl, "Coordinates"@en ;
      sh:path schema:geo  ;
      sh:maxCount 10 ;
      sh:order 4.0 ;
      sh:datatype xsd:string ;
      memorix:searchWeight 1.0 ;
    # TODO dit moet een link naar coordinates
  ] ;
.

image:Creator
  a sh:NodeShape ;
  sh:closed true ;
  sh:ignoredProperties ( rdf:type ) ;
  sh:targetClass image:Creator ;
  sh:property [
    rdfs:label "Vervaardiger"@nl, "Creator"@en ;
    sh:path rico:hasCreator ;
    sh:maxCount 1 ;
    sh:order 1.0 ;
    sh:nodeKind sh:IRI ;
    sh:or (
      [ sh:class recordtypes:Persoon ]
      [ sh:class recordtypes:Organisatie ]
    ) ;
    dash:editor memorix:LinkedRecordEditor ;
  ] ;
  sh:property [
    rdfs:label "Rol"@nl, "Role"@en ;
    sh:path schema:roleName ;
    sh:maxCount 5 ;
    sh:order 2.0 ;
    dash:editor memorix:VocabularyEditor ;
    sh:class skos:Concept ;
    memorix:conceptSchemeIn ( </resources/vocabularies/conceptschemes/3136ddd0-0eb0-4fc9-b78e-5df18be5313f> ) ;
    sh:nodeKind sh:IRI ;
  ] ;
.

