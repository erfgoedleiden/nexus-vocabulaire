@prefix restauratie:  </resources/recordtypes/Restauratie#> .
@prefix vocabularies: </resources/vocabularies/conceptschemes/> .
@prefix xsd:          <http://www.w3.org/2001/XMLSchema#> .
@prefix skos:         <http://www.w3.org/2004/02/skos/core#> .
@prefix rdfs:         <http://www.w3.org/2000/01/rdf-schema#> .
@prefix memorix:      <http://memorix.io/ontology#> .
@prefix sh:           <http://www.w3.org/ns/shacl#> .
@prefix rdf:          <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix recordtypes:  </resources/recordtypes/> .
@prefix html:         <http://www.w3.org/1999/xhtml/> .
@prefix dash:         <http://datashapes.org/dash#> .
@prefix dc:           <http://purl.org/dc/terms/> .
@prefix dce:          <http://purl.org/dc/elements/1.1/> .
@prefix rico:         <https://www.ica.org/standards/RiC/ontology#> .

restauratie:identificationGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Identificatie"@nl;
    sh:order   1.0 .

restauratie:regardsGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Betreft"@nl;
    sh:order   1.5 .

restauratie:descriptionGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Objectbeschrijving"@nl;
    sh:order   2.0 .

restauratie:treatmentGroup
    rdf:type   sh:PropertyGroup ;
    rdfs:label "Behandeling"@nl;
    sh:order   3.0 .

recordtypes:Restauratie
    a memorix:Recordtype, sh:NodeShape ;
    rdfs:label "Restauratie"@nl ;
    rdfs:comment "Restauratie - Erfgoed Leiden"@nl ;
    dc:identifier "Restauratie" ;
    memorix:hasInformationComponent [ rdf:type  memorix:DigitalAssetComponent ] ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass recordtypes:Restauratie ;
    dash:defaultViewForRole dash:all ;
    sh:property [
        sh:maxCount 1 ;
        rdfs:label "Restauratienummer"@nl ;
        sh:group restauratie:identificationGroup ;
        sh:path rico:identifier ;
        memorix:inTitleAt 1.0 ;
        sh:order 2.0 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        rdfs:label   "Begindatum"@nl ;
        sh:group restauratie:identificationGroup ;
        sh:maxCount 1 ;
        dash:editor  memorix:DateEditor ;
        sh:datatype  xsd:integer ;
        sh:order     3.0 ;
        sh:path      rico:hasBeginningDate ;
    ] ;
    sh:property [
        rdfs:label   "Einddatum"@nl ;
        sh:group restauratie:identificationGroup ;
        sh:maxCount 1 ;
        dash:editor  memorix:DateEditor ;
        sh:datatype  xsd:integer ;
        sh:order     4.0 ;
        sh:path      rico:hasEndDate ;
    ] ;
    sh:property [
        rdfs:label "Bestanddeel"@nl ;
        sh:group restauratie:regardsGroup ;
        sh:path restauratie:archive ;
        sh:order 1.0 ;
        dash:viewer dash:DetailsEditor ;
        sh:nodeKind sh:BlankNode ;
        sh:class restauratie:Archive ;
    ] ;
    sh:property [
        rdfs:label "Bibliotheek"@nl ;
        sh:group restauratie:regardsGroup ;
        sh:path restauratie:library ;
        sh:order 2.0 ;
        sh:nodeKind sh:IRI ;
        sh:or (
            [ sh:class recordtypes:Bibliotheek ]
        ) ;
        dash:editor memorix:LinkedRecordEditor ;
    ] ;
    sh:property [
        rdfs:label "Beeldcollectie"@nl ;
        sh:group restauratie:regardsGroup ;
        sh:path restauratie:image ;
        sh:order 3.0 ;
        sh:nodeKind sh:IRI ;
        sh:or (
            [ sh:class recordtypes:Image ]
        ) ;
        dash:editor memorix:LinkedRecordEditor ;
    ] ;
    sh:property [
        sh:maxCount 1 ;
        rdfs:label "Formaat"@nl ;
        sh:group restauratie:descriptionGroup ;
        sh:path rico:measure ;
        sh:order 5.0 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:maxCount 99 ;
        rdfs:label "Soort object"@nl ;
        sh:path rico:hasContentOfType ;
        sh:order 6.0 ;
        sh:group restauratie:descriptionGroup ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:30fa5163-6203-3b1b-8ea4-86e8945fd1ba ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:maxCount 99 ;
        rdfs:label "Materiaal"@nl ;
        sh:path rico:hasCarrierType ;
        sh:order 7.0 ;
        sh:group restauratie:descriptionGroup ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:f21ccd01-6681-3a85-8ae6-12ea9d723d5c ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:maxCount 1 ;
        rdfs:label "Opmerking beschrijving"@nl ;
        sh:group restauratie:descriptionGroup ;
        sh:path rico:descriptiveNote ;
        sh:order 8.0 ;
        sh:datatype xsd:string ;
        dash:editor  dash:TextAreaEditor ;
    ] ;
    sh:property [
        sh:maxCount 1 ;
        rdfs:label "Reden restauratie"@nl ;
        sh:group restauratie:treatmentGroup ;
        sh:path rico:ruleFollowed ;
        sh:order 9.0 ;
        sh:datatype xsd:string ;
        dash:editor  dash:TextAreaEditor ;
    ] ;
    sh:property [
        sh:maxCount 1 ;
        rdfs:label "Restaurator"@nl ;
        sh:group restauratie:treatmentGroup ;
        sh:path rico:isOrWasPerformedBy ;
        sh:order 10.0 ;
        sh:datatype xsd:string ;
    ] ;

    sh:property [
        rdfs:label "Behandelingen"@nl ;
        sh:maxCount 10 ;
        sh:group restauratie:treatmentGroup ;
        sh:path rico:hasActivityType ;
        sh:order 11.0 ;
        dash:viewer dash:DetailsEditor ;
        sh:nodeKind sh:BlankNode ;
        sh:class restauratie:Treatments ;
    ] ;
.

restauratie:Treatments
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       restauratie:Treatments ;
    sh:property [
        sh:maxCount 99 ;
        rdfs:label "Schade"@nl ;
        sh:path rico:qualityOfRepresentation ;
        sh:order 1.0 ;
        sh:group restauratie:treatmentGroup ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:4f0039e5-fce0-3f78-8a35-8cf586d7ee7d ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:maxCount 99 ;
        rdfs:label "Behandeling"@nl ;
        sh:path dc:description ;
        sh:order 2.0 ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:c1451412-7ec0-3429-ba87-1ad145c2872c ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:maxCount 99 ;
        rdfs:label "Materiaal/middel"@nl ;
        sh:path rico:hasCarrierType ;
        sh:order 3.0 ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:40279af2-2868-3585-b9e1-b70b48dc323f ) ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:maxCount 1 ;
        rdfs:label "Opmerkingen behandeling"@nl ;
        sh:path rico:descriptiveNote ;
        sh:order 4.0 ;
        sh:datatype xsd:string ;
        dash:editor  dash:TextAreaEditor ;
    ] ;
.
restauratie:Archive
    rdf:type             sh:NodeShape ;
    sh:closed            true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass       restauratie:Archive ;

    sh:property [
        rdfs:label  "Archief"@nl ;
        sh:path     restauratie:archiveArchive ;
        sh:order    1 ;
        sh:nodeKind sh:IRI ;
        sh:maxCount  1 ;
        sh:or (
            [ sh:class recordtypes:Archiefblok ]
        ) ;
        dash:editor memorix:LinkedRecordEditor ;
    ] ;
    sh:property [
        rdfs:label  "Bestanddeel"@nl ;
        # Dit is anders dan bibliotheek:"Ingebonden in": dat is een stringwaarde, dit is een verwijzing naar een record
        memorix:conditionalLinkField restauratie:archiveArchive ;
        memorix:linkField [
            memorix:hasRecordType recordtypes:Bestanddeel ;
            memorix:path rico:isOrWasIncludedIn ;
        ];
        sh:path     restauratie:archiveFile ;
        sh:order    2.0 ;
        sh:nodeKind sh:IRI ;
        sh:or (
            [ sh:class recordtypes:Bestanddeel ]
        ) ;
        dash:editor  memorix:ConditionalLinkFieldEditor ;
    ] ;
    .
