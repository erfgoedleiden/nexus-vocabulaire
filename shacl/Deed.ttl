deed:detailsGroup  rdf:type  sh:PropertyGroup ;
    rdfs:label  "Bijzonderheden"@nl, "Details"@en ;
    sh:order    5.0 .

deed:personsGroup  rdf:type  sh:PropertyGroup ;
    rdfs:label  "Personen"@nl, "People"@en ;
    sh:order    3.0 .

deed:remarksGroup  rdf:type  sh:PropertyGroup ;
    rdfs:label  "Opmerkingen"@nl, "Remarks"@en ;
    sh:order    6.0 .

deed:locationsGroup  rdf:type  sh:PropertyGroup ;
    rdfs:label  "Locaties"@nl, "Locations"@en ;
    sh:order    2.0 .

deed:deedGroup  rdf:type  sh:PropertyGroup ;
    rdfs:label  "Akte"@nl, "Deed"@en ;
    sh:order    1.0 .

recordtypes:Deed  rdf:type      sh:NodeShape, memorix:Recordtype ;
    rdfs:comment                "Standaard Recordtype voor Aktes"@nl ;
    rdfs:label                  "Akte"@nl, "Deed"@en ;
    dash:defaultViewForRole     dash:all ;
    dce:identifier               "Deed" ;
    owl:equivalentClass         rico:Record ;
    memorix:hasInformationComponent [ rdf:type memorix:DigitalAssetComponent ] ;
    sh:closed                   true ;
    sh:ignoredProperties        ( rdf:type ) ;
    sh:targetClass              recordtypes:Deed ;
    sh:property              [
        rdfs:label   "Titel"@nl, "Title"@en ;
        sh:datatype  xsd:string ;
        sh:maxCount  1 ;
        sh:group     deed:deedGroup ;
        sh:order     0.4 ;
        sh:path      rico:title
    ] ;
    sh:property              [
        rdfs:label   "Registernaam"@nl, "Name of the index"@en ;
        sh:datatype  xsd:string ;
        sh:maxCount  1 ;
        sh:group     deed:deedGroup ;
        sh:order     0.6 ;
        # "registered in a heritage register"
        sh:path      dbpo:heritageRegister
    ] ;
    sh:property [
        rdfs:label  "Archief"@nl, "Fonds"@en ;
        sh:path     deed:archive ;
        sh:order    7.5 ;
        memorix:inTitleAt  3.5 ;
        sh:nodeKind sh:IRI ;
        sh:maxCount  1 ;
        sh:group    deed:deedGroup ;
        sh:or (
            [ sh:class recordtypes:Archiefblok ]
        ) ;
        dash:editor memorix:LinkedRecordEditor ;
    ] ;
    sh:property [
        rdfs:label  "Bestanddeel"@nl, "Linked file"@en  ;
        memorix:conditionalLinkField deed:archive ;
        memorix:linkField [
            memorix:hasRecordType recordtypes:Bestanddeel ;
            memorix:path rico:isOrWasIncludedIn ;
        ];
        sh:path     rico:isOrWasIncludedIn ;
        sh:order    8.0 ;
        sh:maxCount  1 ;
        memorix:inTitleAt  4.0 ;
        sh:nodeKind sh:IRI ;
        sh:group    deed:deedGroup ;
        sh:or (
            [ sh:class recordtypes:Bestanddeel ]
        ) ;
        dash:editor  memorix:ConditionalLinkFieldEditor ;
    ] ;
    sh:property              [
        rdfs:label   "Opmerkingen openbaar"@nl, "Remarks"@en ;
        dash:editor  dash:TextAreaEditor ;
        sh:datatype  xsd:string ;
        sh:group     deed:remarksGroup ;
        sh:maxCount  1 ;
        sh:order     10.0 ;
        sh:path      rico:descriptiveNote
    ] ;
    sh:property              [
        rdfs:label   "Opmerkingen intern"@nl, "Internal remarks"@en ;
        dash:editor  dash:TextAreaEditor ;
        sh:datatype  xsd:string ;
        sh:group     deed:remarksGroup ;
        sh:maxCount  1 ;
        sh:order     10.5 ;
        sh:path      elo:opmerkingIntern ;
    ] ;
    sh:property              [
        rdfs:label   "Gebeurtenis"@nl, "Event"@en ;
        dash:viewer  dash:DetailsEditor ;
        sh:class     deed:Event ;
        sh:group     deed:deedGroup ;
        sh:maxCount  10 ;
        sh:nodeKind  sh:BlankNode ;
        sh:order     2.0 ;
        sh:path      rico:isAssociatedWithEvent
    ] ;
    sh:property              [
        rdfs:comment  "Locaties die voorkomen op de akte"@nl ;
        rdfs:label    "Locatie"@nl, "Location"@en ;
        dash:viewer   dash:DetailsEditor ;
        sh:class      deed:Location ;
        sh:group      deed:locationsGroup ;
        sh:maxCount   999 ;
        sh:nodeKind   sh:BlankNode ;
        sh:order      6.0 ;
        sh:path       schema:contentLocation
    ] ;
    sh:property              [
        rdfs:comment  "Persoon die voorkomt op de akte en zijn rol"@nl ;
        rdfs:label    "Person observation"@en, "Persoonsvermelding"@nl ;
        dash:viewer   dash:DetailsEditor ;
        sh:class      deed:Person ;
        sh:group      deed:personsGroup ;
        sh:maxCount   999 ;
        sh:nodeKind   sh:BlankNode ;
        sh:order      5.0 ;
        sh:path       rico:hasOrHadSubject
    ] ;
    sh:property              [
        rdfs:label           "Akte - Type"@nl, "Deed type"@en ;
        memorix:inTitleAt    1.0 ;

        dash:editor          memorix:VocabularyEditor ;
        sh:class             skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:636f4239-6069-46ab-b8ce-cda56ab489d1 ) ;
        sh:nodeKind          sh:IRI ;
        sh:group             deed:deedGroup ;
        sh:maxCount          1 ;
        sh:order             1.0 ;
        sh:path              rico:hasDocumentaryFormType
    ] ;
    sh:property              [
        rdfs:label           "Datum registratie"@nl, "Date of the record"@en ;
        rdfs:comment         "Datum waarop het document is opgemaakt."@nl ;
        dash:editor          memorix:DateEditor ;
        sh:maxCount          1 ;
        sh:datatype          xsd:integer ;
        sh:group             deed:deedGroup ;
        sh:order             1.3 ;
        sh:path              rico:creationDate
    ] ;
    sh:property              [
        rdfs:label           "Aktenummer"@nl, "Number of the deed"@en ;
        rdfs:comment         "Het (volg)nummer dat bij de akte staat"@nl ;
        sh:maxCount  1 ;
        sh:datatype          xsd:string ;
        sh:group             deed:deedGroup ;
        sh:order             1.5 ;
        sh:path              rico:identifier
    ] ;
    sh:property              [
        rdfs:label           "Pagina"@nl, "Page"@en ;
        sh:maxCount  1 ;
        sh:datatype          xsd:string ;
        sh:group             deed:deedGroup ;
        sh:order             1.6 ;
        # 'Any description of pages that is not separated into pageStart and pageEnd;
        # for example, "1-6, 9, 55" or "10-12, 46-49".'
        sh:path              schema:pagination
    ] ;
    sh:property              [
        rdfs:comment  "Bijzonderheid bij deze akte"@nl ;
        rdfs:label    "Bijzonderheid"@nl, "Details"@en ;
        dash:viewer   dash:DetailsEditor ;
        sh:class      deed:Details ;
        sh:group      deed:detailsGroup ;
        sh:maxCount   10 ;
        sh:nodeKind   sh:BlankNode ;
        sh:order      8.0 ;
        sh:path       rico:history
    ] ;
    sh:targetClass           recordtypes:Deed .

deed:Location  rdf:type       sh:NodeShape ;
    sh:closed             true ;
    sh:ignoredProperties  ( rdf:type ) ;
    sh:property          [
        rdfs:label  "order"@en ;
        memorix:hidden true ;
        sh:description "This field is required for persistent order of group items" ;
        sh:path     memorix:order ;
        sh:order    0.0 ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property           [
        rdfs:label   "Locatie - Type"@nl, "Location type"@en ;
        sh:order     1.0 ;
        sh:path      rico:hasOrHadPlaceType ;
        sh:maxCount  1 ;
        dash:editor  memorix:VocabularyEditor ;
        sh:class     skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:42cfec07-894f-4e72-a80d-1418f5ecc324 ) ;
        sh:nodeKind  sh:IRI ;
    ] ;
    sh:property           [
        rdfs:label   "Plaats"@nl, "Place"@en ;
        sh:order     2.0 ;
        sh:path      schema:addressLocality ;
        sh:maxCount  1 ;
        dash:editor  memorix:VocabularyEditor ;
        sh:class     skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:889f909b-1057-46ed-bce6-104570ab939f ) ;
        sh:nodeKind  sh:IRI ;
    ] ;
    sh:property           [
        rdfs:label   "Opmerking bij locatie"@nl, "Remarks about Place"@en ;
        sh:maxCount  1 ;
        dash:editor  dash:TextAreaEditor ;
        sh:datatype  xsd:string ;
        sh:order     5.0 ;
        sh:path      rico:descriptiveNote
    ] ;
    sh:targetClass        deed:Location .

deed:Person  rdf:type         sh:NodeShape ;
    sh:closed             true ;
    sh:ignoredProperties  ( rdf:type ) ;
    sh:property          [
        rdfs:label  "order"@en ;
        memorix:hidden true ;
        sh:description "This field is required for persistent order of group items" ;
        sh:path     memorix:order ;
        sh:order    0.0 ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property           [
        rdfs:label   "Persoonsvermelding"@nl, "Person observation"@en ;
        sh:maxCount  1 ;
        dash:editor  memorix:LinkedRecordEditor ;
        memorix:inSummaryAt  1.0 ;
        sh:nodeKind  sh:IRI ;
        sh:or        ( [ sh:class  recordtypes:Persoonsvermelding ] ) ;
        sh:order     2.0 ;
        sh:path      schema:mentions
    ] ;
    sh:targetClass deed:Person .

deed:Details  rdf:type        sh:NodeShape ;
    sh:closed             true ;
    sh:ignoredProperties  ( rdf:type ) ;
    sh:property          [
        rdfs:label  "order"@en ;
        memorix:hidden true ;
        sh:description "This field is required for persistent order of group items" ;
        sh:path     memorix:order ;
        sh:order    0.0 ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property           [
        rdfs:label   "Bijzonderheid - Type"@nl, "Detail type"@en ;
        sh:maxCount  1 ;
        sh:order     1.0 ;
        sh:path      rico:hasContentOfType ;
        dash:editor  memorix:VocabularyEditor ;
        sh:class     skos:Concept ;
        memorix:conceptSchemeIn ( vocabularies:e2f783dd-710d-473a-9515-b97eaa0da52d ) ;
        sh:nodeKind  sh:IRI ;
    ] ;
    sh:property           [
        rdfs:label   "Bijzonderheid"@nl, "Detail"@en ;
        rdfs:comment "Belangrijke informatie die niet in de overige velden past. Dit veld wordt gecombineerd met 'Bijzonderheid-Type'."@nl ;
        sh:maxCount  1 ;
        sh:datatype  xsd:string ;
        sh:order     2.0 ;
        sh:path      rico:descriptiveNote
    ] ;
    sh:targetClass        deed:Details .




deed:Event  rdf:type          sh:NodeShape ;
    sh:closed             true ;
    sh:ignoredProperties  ( rdf:type ) ;
    sh:property          [
        rdfs:label  "order"@en ;
        memorix:hidden true ;
        sh:description "This field is required for persistent order of group items" ;
        sh:path     memorix:order ;
        sh:order    0.0 ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property           [
        rdfs:label         "Gebeurtenis - Type"@nl, "Event type"@en ;
        sh:maxCount  1 ;
        dash:editor memorix:VocabularyEditor ;
        sh:class skos:Concept ;
        memorix:inTitleAt  2.0 ;
        memorix:conceptSchemeIn ( vocabularies:2dff6cc5-1e18-4640-ae32-79c9c8cd0dd7 ) ;
        sh:nodeKind sh:IRI ;
        sh:order           1.0 ;
        sh:path            rico:hasEventType
    ] ;
    sh:property           [
        rdfs:label   "Datum gebeurtenis"@nl, "Date of the event"@en ;
        dash:editor  memorix:DateEditor ;
        sh:datatype  xsd:integer ;
        sh:group     deed:deedGroup ;
        memorix:inTitleAt  3.0 ;
        sh:maxCount  1 ;
        sh:order     3.0 ;
        sh:path      dc:date
    ] ;
    sh:targetClass        deed:Event .
